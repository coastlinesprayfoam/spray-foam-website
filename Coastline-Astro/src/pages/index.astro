---
import BaseLayout from '../components/layout/BaseLayout.astro';
import { getCollection } from 'astro:content';
const services = await getCollection('services');
---
<BaseLayout title="Spray Foam Insulation" description="High-performance insulation & comfort solutions">
  <section class="max-w-7xl mx-auto px-4 py-16">
    <div class="max-w-2xl">
      <h1 class="text-4xl font-bold tracking-tight text-brand-primary">Energy Efficient Comfort</h1>
      <p class="mt-4 text-lg text-slate-700">Upgrade building performance with modern insulation techniques focused on comfort, durability, and efficiency.</p>
      <div class="mt-6 flex gap-4">
        <a href="/contact/" class="inline-block bg-brand-primary text-white px-6 py-3 rounded-md font-medium hover:bg-brand-dark">Get a Quote</a>
        <a href="/services/" class="inline-block bg-slate-200 text-slate-900 px-6 py-3 rounded-md font-medium hover:bg-slate-300">Our Services</a>
      </div>
    </div>
  </section>
  <section class="bg-slate-50 py-14">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-2xl font-semibold">Core Services</h2>
      <div class="mt-6 grid gap-6 md:grid-cols-3">
        {services.map(s => (
          <div class="p-4 border rounded bg-white" style={{ order: s.data.order ?? 0 }}>
            <h3 class="font-semibold">{s.data.title}</h3>
            {s.data.summary && <p class="mt-2 text-sm">{s.data.summary}</p>}
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
