---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import { getCollection } from 'astro:content';
const faqs = await getCollection('faqs');
---
<BaseLayout title="FAQ" description="Frequently asked questions about insulation">
  <section class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold text-brand-primary">Frequently Asked Questions</h1>
    <div class="mt-8 divide-y">
      {faqs.map(f => (
        <details class="py-4 group">
          <summary class="cursor-pointer font-medium text-brand-primary flex justify-between items-center">
            {f.data.question}
            <span class="ml-4 text-sm text-brand-accent group-open:rotate-45 transition">+</span>
          </summary>
          <div class="mt-2 text-sm leading-relaxed text-slate-700">
            {f.data.answer}
          </div>
        </details>
      ))}
    </div>
  </section>
</BaseLayout>
