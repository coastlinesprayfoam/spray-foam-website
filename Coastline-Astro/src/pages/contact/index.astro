---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import { site } from '../../config/site';
---
<BaseLayout title="Contact" description="Request info or a quote">
  <section class="max-w-3xl mx-auto px-4 py-12 space-y-6">
    <div>
      <h1 class="text-3xl font-bold text-brand-primary">Contact</h1>
      <p class="mt-2 text-slate-600">Send a quick message and we will follow up soon.</p>
    </div>
    <form method="post" action="/api/quote" class="grid gap-4 bg-slate-50 p-6 rounded-md border">
      <div class="grid gap-1">
        <label for="name" class="text-sm font-medium">Name</label>
        <input id="name" name="name" required class="px-3 py-2 border rounded" />
      </div>
      <div class="grid gap-1">
        <label for="email" class="text-sm font-medium">Email</label>
        <input id="email" name="email" type="email" required class="px-3 py-2 border rounded" />
      </div>
      <div class="grid gap-1">
        <label for="message" class="text-sm font-medium">Message</label>
        <textarea id="message" name="message" rows={4} class="px-3 py-2 border rounded"></textarea>
      </div>
      <button class="bg-brand-primary text-white px-6 py-3 rounded-md font-medium hover:bg-brand-dark w-max">Submit</button>
    </form>
    <div class="text-sm text-slate-600">
      <p><strong>Phone:</strong> {site.phone}</p>
      <p><strong>Email:</strong> {site.email}</p>
    </div>
  </section>
</BaseLayout>
